<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.turingcourt.dao.BlogLikesDao">

    <resultMap id="BaseResultMap" type="com.turingcourt.entity.BlogLikes">
        <!--@Table blog-likes-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="bid" column="bid" jdbcType="INTEGER"/>
        <result property="uid" column="uid" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询博客是否点赞-->
    <select id="queryLike" resultType="java.lang.Boolean">
        select exists (select 1 from turingblog.blog_likes where bid = #{bid} and uid = #{uid})
    </select>

    <!--对博客点赞-->
    <insert id="likeBlog">
        insert into turingblog.blog_likes (bid,uid) values (#{bid} , #{uid})
    </insert>

    <!--取消博客点赞-->
    <delete id="unlikeBlog">
        delete from turingblog.blog_likes where bid = (#{bid}) and uid = #{uid}
    </delete>

    <!--删除博客点赞-->
    <delete id="deleteByBid">
        delete from turingblog.blog_likes where bid = (#{bid})
    </delete>


</mapper>
