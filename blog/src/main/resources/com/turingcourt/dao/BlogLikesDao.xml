<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.turingcourt.dao.BlogLikesDao">

    <resultMap id="BaseResultMap" type="com.turingcourt.entity.BlogLikes">
        <!--@Table blog-likes-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="bid" column="bid" jdbcType="INTEGER"/>
        <result property="uid" column="uid" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          id, bid, uid
        from turingblog.blog-likes
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          id, bid, uid
        from turingblog.blog-likes
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          id, bid, uid
        from turingblog.blog-likes
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="bid != null">
                and bid = #{bid}
            </if>
            <if test="uid != null">
                and uid = #{uid}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into turingblog.blog-likes(bid, uid)
        values (#{bid}, #{uid})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update turingblog.blog-likes
        <set>
            <if test="bid != null">
                bid = #{bid},
            </if>
            <if test="uid != null">
                uid = #{uid},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from turingblog.blog-likes where id = #{id}
    </delete>

</mapper>