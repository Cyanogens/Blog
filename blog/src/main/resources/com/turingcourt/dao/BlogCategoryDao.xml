<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.turingcourt.dao.BlogCategoryDao">

    <resultMap id="BaseResultMap" type="com.turingcourt.entity.BlogCategory">
        <!--@Table blog-category-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="bid" column="bid" jdbcType="INTEGER"/>
        <result property="cid" column="cid" jdbcType="INTEGER"/>
    </resultMap>

    <!--新增关系-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into turingblog.blog_category(bid, cid)
        values (#{bid}, #{cid})
    </insert>

    <!--通过博客id删除关系-->
    <delete id="deleteByBlogId">
        delete from turingblog.blog_category where bid = #{blogId}
    </delete>

    <!--通过标签id删除关系-->
    <delete id="deleteByCategoryId">
        delete from turingblog.blog_category where cid = #{categoryId}
    </delete>

</mapper>
